<div class="container text-center mt-4">
  <h1>Save any kind of movies</h1>

  <h2>My lists :</h2>

  <div class="row mt-5 text-white">
    <% @lists.each do |list| %>
      <div class="col-4 mt-2 mb-2">
      <%= link_to list_path(list), class:'text-white' do%>
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://lumiere-a.akamaihd.net/v1/images/p_avengersinfinitywar_19871_cb171514.jpeg?region=0,0,540,810')">
          <%= list.name %>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to '+ NEW LIST', new_list_path, class:'mt-5 form-actions btn btn-primary' %>
</div>
