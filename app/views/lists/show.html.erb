<div class="container text-center mt-4">
  <h1><%= @list.name %></h1>

  <h2> All your movies</h2>

  <div class="container mt-4 text-white">
    <% @list.movies.each do |film|%>
      <div class="text-center">
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://upload.wikimedia.org/wikipedia/commons/b/be/Film_strip.jpg')">
          <%= film.title %> - <%= film.rating %>
        </div>
      <% end %>
      </div>
  </div>
  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class:'mt-5 form-actions btn btn-primary' %>
  <%= link_to 'Back', root_path, class:'mt-5 form-actions btn btn-primary' %>
</div>
